<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ff000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <ListView android:id="@+id/topVideoList" android:background="#ff000000" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/videoButtonsLayout"/>
    <ListView android:id="@+id/newVideoList" android:background="#ff000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/videoButtonsLayout"/>
    <ListView android:id="@+id/myVideoList" android:background="#ff000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/videoButtonsLayout"/>
    <RelativeLayout android:id="@+id/videoButtonsLayout" android:background="@drawable/video_gallery_header_2x_land" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textStyle="bold" android:textColor="@color/video_gallery_button_text_color" android:gravity="center" android:id="@+id/videoGalleryTopButtonText" android:background="@drawable/video_gallery_button_top_land" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_gallery_list_top" style="@style/SharingGalleryButton"/>
            <TextView android:textStyle="bold" android:textColor="@color/video_gallery_button_text_color" android:gravity="center" android:id="@+id/videoGalleryNewButtonText" android:background="@drawable/video_gallery_button_new_land" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_gallery_list_new" style="@style/SharingGalleryButton"/>
            <ImageView android:id="@+id/videoGalleryThumbsUpImageButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_gallery_button_like_land"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/videoGalleryCloseButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/button_close_webview" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
</RelativeLayout>
