<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ff000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="@drawable/video_gallery_header_2x" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textStyle="bold" android:textColor="@color/video_gallery_button_text_color" android:gravity="center" android:id="@+id/videoGalleryTopButtonText" android:background="@drawable/video_gallery_button_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_gallery_list_top" style="@style/SharingGalleryButton"/>
        <TextView android:textStyle="bold" android:textColor="@color/video_gallery_button_text_color" android:gravity="center" android:id="@+id/videoGalleryNewButtonText" android:background="@drawable/video_gallery_button_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_gallery_list_new" style="@style/SharingGalleryButton"/>
        <ImageView android:id="@+id/videoGalleryThumbsUpImageButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_gallery_button_like"/>
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <ImageView android:layout_gravity="top" android:id="@+id/videoGalleryCloseButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/button_close_webview"/>
    </LinearLayout>
    <ListView android:id="@+id/topVideoList" android:visibility="visible" android:layout_width="match_parent" android:layout_height="0dp" android:cacheColorHint="#ff000000" android:layout_weight="1"/>
    <ListView android:id="@+id/newVideoList" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:cacheColorHint="#ff000000" android:layout_weight="1"/>
    <ListView android:id="@+id/myVideoList" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:cacheColorHint="#ff000000" android:layout_weight="1"/>
</LinearLayout>
