<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/lab_bottom_button_line" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/labGamewallButton" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/button_gamewall"/>
            <ImageView android:layout_gravity="bottom" android:id="@+id/buttonTubeYellow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/button_tube_yellow"/>
        </LinearLayout>
        <View android:layout_gravity="bottom" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
        <ImageView android:layout_gravity="bottom" android:id="@+id/buttonTubeGreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/button_tube_green"/>
        <View android:layout_gravity="bottom" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
        <ImageView android:layout_gravity="bottom" android:id="@+id/buttonTubeCyan" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/button_tube_cyan"/>
        <View android:layout_gravity="bottom" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
        <ImageView android:layout_gravity="bottom" android:id="@+id/buttonTubeMagenta" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/button_tube_magenta"/>
        <View android:layout_gravity="bottom" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
        <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/tubeBuyButtonWrapper" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tubes"/>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/tube_buy_number_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/tube_counter_text_top_margin" android:layout_centerHorizontal="true">
                    <TextView android:textSize="@dimen/tube_counter_text_size" android:textStyle="bold" android:textColor="@android:color/black" android:layout_gravity="center" android:id="@+id/tubeBuyButtonCounterText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="999"/>
                </LinearLayout>
            </RelativeLayout>
            <ImageView android:id="@+id/buttonChair" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/button_chair"/>
            <ImageView android:layout_gravity="bottom" android:id="@+id/buttonTubeBlue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/button_tube_blue"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
