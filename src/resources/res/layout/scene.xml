<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/scene" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/sceneHolder" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:id="@+id/recAndVideoBtnZone" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
                <include layout="@layout/button_recording"/>
                <include layout="@layout/button_video_sharing"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                <include layout="@layout/button_info"/>
                <include layout="@layout/button_grid"/>
            </LinearLayout>
            <com.outfit7.talkingfriends.gui.view.UpdateAppView android:id="@+id/updateAppView" android:visibility="gone" android:layout="@layout/update_app" android:inflatedId="@+id/updatedAppInflated" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <include layout="@layout/bottom_button_layout"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
